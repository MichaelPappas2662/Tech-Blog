<main class="form-signin text-center">
  <form id="login-form">
    <h1 class="h3 mb-3 fw-normal">Login</h1>

    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="username-login" placeholder="Doe246" autofocus="true">
      <label for="username-login">Username</label>
    </div>
    <div class="form-floating mb-3">
      <input type="password" class="form-control" id="password-login" placeholder="Password" autofocus="true">
      <label for="password-login">Password</label>
    </div>

    <button class="w-100 btn btn-lg btn-info mb-3" type="submit">Sign in</button>
    <a class="login-link" href="/signup">Sign up instead</a>
  </form>
</main>

<script src="/js/login.js"></script>